<div id="editData" class="position-absolute editemploye-card">
    <div class="row d-flex justify-content-center">
      <div class="column col-lg-6 mt-3 ">
        <div class="card rounded-4 ">
          <header class="d-flex justify-content-between">
            <h4 class="head p-4">Edit Employee</h4>
            <button type="button" onclick="editformClose()" class="btn-close  p-3" aria-label="Close"></button>
          </header>



          <div class="body px-4 ">
            <div class="row ">
              <div class="col-6 d-flex">

                <label for="editupload"
                  class="upload form-label  mb-3 p-4 d-flex flex-column align-items-center rounded-3">
                  <input type="file" class="form-control file" id="editupload" onchange="editAvatarPreview()" />
                  <img id="editPreview" src="image/Rectangle 3460.png">
                </label>
                <div class="editerror"></div>
                <div>
                  <label type="button" for="editupload"
                    class="btn btn-secondary edit-btn d-flex align-items-center justify-content-start m-5 px-4 py-2 rounded-4">Change</label>
                </div>

              </div>

            </div>

            <div class="row">
              <div class="col-lg-3 mb-3 ">
                <label for="select-menu" class="form-label text">Salutation</label>

                <select class="form-select rounded-3 select " aria-label="Default select example" id="editSalutation">
                  <option selected value="">Select</option>
                  <option value="Mr">Mr</option>
                  <option value="Ms">Ms</option>
                  <option value="Dr">Dr</option>
                </select>
                <div class="editerror"></div>
              </div>

              <div class="col-lg-4 mb-3">
                <label for="frst-name" class=" form-label text mb-2">First Name
                </label>
                <input type="text" id="editFirstName" class="form-control rounded-3 select" placeholder="Michael" />
                <div class="editerror"></div>
              </div>

              <div class="col-lg-5 mb-3">
                <label for="exampleInputEmail1" class="form-label text">Last Name
                </label>
                <input type="text" id="editLastName" class="form-control rounded-3 select" placeholder="Johnson" />
                <div class="editerror"></div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-6 mb-3">
                <div class="mb-3">
                  <label for="emailinput" class="form-label text">Email address</label>
                  <input type="text" id="editEmailaddress" class="form-control rounded-3 select"
                    placeholder="michaeljohnson@example.com" />
                  <div class="editerror"></div>
                </div>
              </div>

              <div class="col-lg-6 mb-3">
                <div class="mb-3">
                  <label for="mobileinput" class="form-label text">Mobile Number
                  </label>
                  <input type="text" id="editMobileNumber" class="form-control rounded-3 select"
                    placeholder="5551234567" />
                  <div class="editerror"></div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-6 mb-3">
                <label for="editUsername" class="form-label text">Username</label>
                <input type="text" id="editUsername" class="form-control" placeholder="enter username">
                <div class="editerror"></div>

              </div>

              <div class="col-lg-6 mb-3">
                <label for="editPassword" class="form-label text">Password</label>
                <input type="password" id="editPassword" class="form-control" placeholder="enter password">
                <div class="editerror"></div>

              </div>
            </div>

            <div class="row">
              <div class="col-lg-6 mb-3">
                <label for="dobinput" class="form-label text">Date of Birth
                </label>
                <input type="date" id="editdob" class="form-control rounded-3 select" placeholder="10 December 1985" />
                <div class="editerror"></div>
              </div>

              <div class="col-lg-6 mb-3">
                <label for="gendrinput" class="form-label text">Gender</label>

                <div class="d-flex gap-3">
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="editgender" id="editgendermale" value="Male"
                      checked />
                    <label class="form-check-label select" for="editgendermale">
                      Male
                    </label>

                  </div>

                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="editgender" id="editgenderfemale" value="Female"
                      checked />
                    <label class="form-check-label select" for="editgenderfemale">
                      Female
                    </label>
                  </div>
                </div>
                <div class="editerror"></div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12 mb-3">
                <label for="addressinput" class="form-label text">Qualification
                </label>
                <input type="text" id="editQualification" class="form-control rounded-3 select"
                  placeholder="Bachelor's Degree" />
                <div class="editerror"></div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-12 mb-3">
                <label for="addressinput" class="form-label text">Address
                </label>
                <input type="text" id="editAddress" class="form-control rounded-3 select"
                  placeholder="789 Pine St Dummy, Address" />
                <div class="editerror"></div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-6 mb-3">
                <label for="contryinpt" class="form-label text">Country</label>

                <select class="form-select rounded-3 select" aria-label="Default select example" id="editCountry">
                  <option value="USA">USA</option>
                  <option value="INDIA">INDIA</option>
                  <option value="UAE">UAE</option>
                  <option value="CHINA">CHINA </option>
                </select>
                <div class="editerror"></div>
              </div>

              <div class="col-lg-6 mb-3">
                <label for="stateinpt" class="form-label text">State</label>

                <select class="form-select rounded-3 select" aria-label="Default select example" id="editState">
                  <option selected value="">select state</option>
                  <option value="TX">TX</option>
                  <option value="WA">WA</option>
                  <option value="IL">IL</option>
                </select>
                <div class="editerror"></div>
              </div>
            </div>

            <div class="row">
              <div class="col-lg-6 mb-2">
                <label for="cityinpt" class="form-label text">City</label>
                <input type="text" id="editCity" class="form-control rounded-3 select" placeholder="Chicago" />
                <div class="editerror"></div>
              </div>

              <div class="col-lg-6 mb-4">
                <label for="pninpt" class="form-label text">Pin/Zip
                </label>
                <input type="text" id="editPin" class="form-control rounded-3 select" placeholder="123456 " />
                <div class="editerror"></div>
              </div>


              <div class=" row p-0 ">
                <div class="col-lg-12 my-4 ">
                  <div class="card-btn  rounded-4">
                    <div class="row p-0 ">
                      <div class="col-lg-12 d-flex gap-2 p-0 justify-content-end">
                        <button type="button" class="btn btn-lg rounded-4" onclick="editformClose()">Cancel</button>
                        <button type="button" class="btn btn-primary rounded-4" id="savedata">Save Changes</button>
                      </div>
                    </div>
                  </div>


                </div>
              </div>

            </div>
          </div>
        </div>
      </div>



    </div>


  </div>